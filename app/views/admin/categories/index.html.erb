
<section class="admin-categories-index">

  <header class="page-header">
    <h1>Categories</h1>
    <%= link_to 'New Category', admin_categories_new_path, class: 'btn btn-primary' %>
  </header>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Name</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</section>
